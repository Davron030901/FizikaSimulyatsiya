        <div class="theory-section">
            <div class="theory-title">Nazariya va Formulalar</div>
            
            <div class="formula-box">
                <h3>1. Tebranish Tenglamasi</h3>
                <div class="formula">
                    \[x(t) = A \cos(\omega t + \varphi)\]
                </div>
                <div class="formula-desc">
                    Bu yerda: <strong>A</strong> - amplituda (maksimal siljish), 
                    <strong>œâ</strong> - burchak chastota, 
                    <strong>œÜ</strong> - boshlang'ich faza, 
                    <strong>t</strong> - vaqt
                </div>
            </div>
            
            <div class="formula-box">
                <h3>2. Period va Chastota</h3>
                <div class="formula">
                    \[T = 2\pi\sqrt{\frac{m}{k}}\]
                    \[f = \frac{1}{T}\]
                    \[\omega = 2\pi f = \sqrt{\frac{k}{m}}\]
                </div>
                <div class="formula-desc">
                    <strong>T</strong> - tebranish periodi, 
                    <strong>f</strong> - chastota, 
                    <strong>m</strong> - massa, 
                    <strong>k</strong> - prujina bikrligi
                </div>
            </div>
            
            <div class="formula-box">
                <h3>3. Tezlik va Tezlanish</h3>
                <div class="formula">
                    \[v(t) = -A\omega \sin(\omega t + \varphi)\]
                    \[a(t) = -A\omega^2 \cos(\omega t + \varphi) = -\omega^2 x(t)\]
                </div>
                <div class="formula-desc">
                    Tezlik va tezlanish harmonik funksiyalar sifatida o'zgaradi
                </div>
            </div>
            
            <div class="formula-box">
                <h3>4. Energiya Saqlanish Qonuni</h3>
                <div class="formula">
                    \[E = K + U = \frac{1}{2}mv^2 + \frac{1}{2}kx^2 = \frac{1}{2}kA^2\]
                </div>
                <div class="formula-desc">
                    Umumiy mexanik energiya doimiy qoladi. 
                    <strong>K</strong> - kinetik energiya, 
                    <strong>U</strong> - potensial energiya
                </div>
            </div>
            
            <div class="formula-box">
                <h3>5. Guk Qonuni</h3>
                <div class="formula">
                    \[F = -kx\]
                </div>
                <div class="formula-desc">
                    Prujina kuchi siljishga proporsional va qarama-qarshi yo'nalgan
                </div>
            </div>
            
            <div style="margin-top: 25px;">
                <h3 style="color: var(--secondary); margin-bottom: 15px; font-size: 1.1rem;">
                    üí° Amaliy Misollar
                </h3>
                <div class="info-badge">üèóÔ∏è Binolar va ko'priklar</div>
                <div class="info-badge">üé∏ Musiqa asboblari</div>
                <div class="info-badge">üöó Avtomobil suspenziyasi</div>
                <div class="info-badge">‚è∞ Soatlar mexanizmi</div>
                <div class="info-badge">üåä To'lqinlar va tebranishlar</div>
            </div>
        </div>
    </div>
    
    <script>
        // Global variables
        let canvas, ctx;
        let animationId = null;
        let isPlaying = false;
        let time = 0;
        let currentView = 'animation';
        
        // Parameters
        let params = {
            amplitude: 0.10,      // A (m)
            mass: 1.0,            // m (kg)
            stiffness: 100,       // k (N/m)
            phase: 0,             // œÜ (radians)
            speed: 1.0            // Animation speed
        };
        
        // History for graphs
        let history = {
            time: [],
            position: [],
            velocity: [],
            acceleration: [],
            maxPoints: 200
        };
        
        // Initialize
        window.onload = function() {
            canvas = document.getElementById('mainCanvas');
            ctx = canvas.getContext('2d');
            
            resizeCanvas();
            window.addEventListener('resize', resizeCanvas);
            
            setupEventListeners();
            updateCalculations();
            drawFrame();
        };
        
        function resizeCanvas() {
            const rect = canvas.getBoundingClientRect();
            canvas.width = rect.width * window.devicePixelRatio;
            canvas.height = rect.height * window.devicePixelRatio;
            ctx.scale(window.devicePixelRatio, window.devicePixelRatio);
            
            if (!isPlaying) {
                drawFrame();
            }
        }
        
        function setupEventListeners() {
            document.getElementById('speedSlider').addEventListener('input', (e) => {
                params.speed = parseFloat(e.target.value);
                document.getElementById('speedValue').textContent = params.speed.toFixed(1) + 'x';
            });
            
            document.getElementById('amplitudeSlider').addEventListener('input', (e) => {
                params.amplitude = parseFloat(e.target.value);
                document.getElementById('amplitudeValue').textContent = params.amplitude.toFixed(2) + ' m';
                updateCalculations();
            });
            
            document.getElementById('massSlider').addEventListener('input', (e) => {
                params.mass = parseFloat(e.target.value);
                document.getElementById('massValue').textContent = params.mass.toFixed(1) + ' kg';
                updateCalculations();
            });
            
            document.getElementById('stiffnessSlider').addEventListener('input', (e) => {
                params.stiffness = parseFloat(e.target.value);
                document.getElementById('stiffnessValue').textContent = params.stiffness.toFixed(0) + ' N/m';
                updateCalculations();
            });
            
            document.getElementById('phaseSlider').addEventListener('input', (e) => {
                params.phase = parseFloat(e.target.value) * Math.PI / 180;
                document.getElementById('phaseValue').textContent = e.target.value + '¬∞';
                if (!isPlaying) {
                    drawFrame();
                }
            });
            
            // Touch support for mobile
            canvas.addEventListener('touchstart', handleTouch, false);
            canvas.addEventListener('touchmove', handleTouch, false);
        }
        
        function handleTouch(e) {
            e.preventDefault();
            // Add touch interaction logic here if needed
        }
        
        function updateCalculations() {
            const omega = Math.sqrt(params.stiffness / params.mass);
            const period = 2 * Math.PI / omega;
            const frequency = 1 / period;
            
            document.getElementById('periodStat').textContent = period.toFixed(2) + ' s';
            document.getElementById('frequencyStat').textContent = frequency.toFixed(2) + ' Hz';
            document.getElementById('omegaStat').textContent = omega.toFixed(2) + ' rad/s';
        }
        
        function togglePlayPause() {
            isPlaying = !isPlaying;
            const btn = document.getElementById('playPauseBtn');
            
            if (isPlaying) {
                btn.innerHTML = '‚è∏ Pause';
                animate();
            } else {
                btn.innerHTML = '‚ñ∂ Play';
                if (animationId) {
                    cancelAnimationFrame(animationId);
                }
            }
        }
        
        function resetSimulation() {
            time = 0;
            history.time = [];
            history.position = [];
            history.velocity = [];
            history.acceleration = [];
            
            if (!isPlaying) {
                drawFrame();
            }
        }
        
        function animate() {
            if (!isPlaying) return;
            
            const dt = 0.016 * params.speed; // ~60fps
            time += dt;
            
            // Update history
            const omega = Math.sqrt(params.stiffness / params.mass);
            const x = params.amplitude * Math.cos(omega * time + params.phase);
            const v = -params.amplitude * omega * Math.sin(omega * time + params.phase);
            const a = -params.amplitude * omega * omega * Math.cos(omega * time + params.phase);
            
            history.time.push(time);
            history.position.push(x);
            history.velocity.push(v);
            history.acceleration.push(a);
            
            if (history.time.length > history.maxPoints) {
                history.time.shift();
                history.position.shift();
                history.velocity.shift();
                history.acceleration.shift();
            }
            
            document.getElementById('timeStat').textContent = time.toFixed(2) + ' s';
            
            drawFrame();
            animationId = requestAnimationFrame(animate);
        }
        
        function drawFrame() {
            const w = canvas.width / window.devicePixelRatio;
            const h = canvas.height / window.devicePixelRatio;
            
            // Clear
            ctx.fillStyle = '#0a0e27';
            ctx.fillRect(0, 0, w, h);
            
            // Draw grid
            drawGrid(w, h);
            
            // Draw based on current view
            switch(currentView) {
                case 'animation':
                    drawAnimation(w, h);
                    break;
                case 'graphs':
                    drawGraphs(w, h);
                    break;
                case 'vectors':
                    drawVectors(w, h);
                    break;
            }
            
            updateEnergyBars();
        }
        
        function drawGrid(w, h) {
            ctx.strokeStyle = 'rgba(45, 58, 110, 0.3)';
            ctx.lineWidth = 1;
            
            const gridSize = 40;
            
            for (let x = 0; x < w; x += gridSize) {
                ctx.beginPath();
                ctx.moveTo(x, 0);
                ctx.lineTo(x, h);
                ctx.stroke();
            }
            
            for (let y = 0; y < h; y += gridSize) {
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(w, y);
                ctx.stroke();
            }
        }
        
        function drawAnimation(w, h) {
            const omega = Math.sqrt(params.stiffness / params.mass);
            const x = params.amplitude * Math.cos(omega * time + params.phase);
            
            const centerY = h / 2;
            const centerX = w / 4;
            const scale = 1500;
            
            // Draw spring
            const springStart = 50;
            const springEnd = centerX + x * scale;
            drawSpring(springStart, centerY, springEnd, centerY);
            
            // Draw mass
            const massSize = 40 + params.mass * 10;
            ctx.fillStyle = '#00d4ff';
            ctx.shadowColor = 'rgba(0, 212, 255, 0.5)';
            ctx.shadowBlur = 20;
            ctx.beginPath();
            ctx.arc(springEnd, centerY, massSize/2, 0, Math.PI * 2);
            ctx.fill();
            ctx.shadowBlur = 0;
            
            // Draw position indicator
            ctx.fillStyle = '#e0e6ff';
            ctx.font = '14px JetBrains Mono';
            ctx.fillText(`x = ${(x * 100).toFixed(1)} cm`, springEnd - 40, centerY + massSize/2 + 25);
            
            // Draw reference line
            ctx.strokeStyle = 'rgba(255, 190, 11, 0.5)';
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            ctx.moveTo(centerX, centerY - 100);
            ctx.lineTo(centerX, centerY + 100);
            ctx.stroke();
            ctx.setLineDash([]);
            
            // Draw trajectory
            if (history.position.length > 1) {
                const startX = w * 0.6;
                const trajectoryW = w * 0.35;
                const trajectoryH = h * 0.8;
                const trajectoryY = h * 0.1;
                
                ctx.strokeStyle = 'rgba(45, 58, 110, 0.5)';
                ctx.strokeRect(startX, trajectoryY, trajectoryW, trajectoryH);
                
                ctx.strokeStyle = '#00d4ff';
                ctx.lineWidth = 2;
                ctx.beginPath();
                
                for (let i = 0; i < history.position.length; i++) {
                    const px = startX + (i / history.maxPoints) * trajectoryW;
                    const py = trajectoryY + trajectoryH/2 - (history.position[i] / params.amplitude) * (trajectoryH * 0.4);
                    
                    if (i === 0) {
                        ctx.moveTo(px, py);
                    } else {
                        ctx.lineTo(px, py);
                    }
                }
                ctx.stroke();
                ctx.lineWidth = 1;
            }
        }
        
        function drawSpring(x1, y1, x2, y2) {
            const coils = 15;
            const amplitude = 15;
            const length = x2 - x1;
            const step = length / coils;
            
            ctx.strokeStyle = '#ff006e';
            ctx.lineWidth = 3;
            ctx.beginPath();
            ctx.moveTo(x1, y1);
            
            for (let i = 0; i <= coils; i++) {
                const x = x1 + i * step;
                const y = y1 + (i % 2 === 0 ? amplitude : -amplitude);
                ctx.lineTo(x, y);
            }
            
            ctx.lineTo(x2, y1);
            ctx.stroke();
            ctx.lineWidth = 1;
        }
        
        function drawGraphs(w, h) {
            const margin = 50;
            const graphH = (h - 4 * margin) / 3;
            
            const graphs = [
                { data: history.position, color: '#00d4ff', label: 'Siljish (x)', unit: 'm' },
                { data: history.velocity, color: '#ffbe0b', label: 'Tezlik (v)', unit: 'm/s' },
                { data: history.acceleration, color: '#ff006e', label: 'Tezlanish (a)', unit: 'm/s¬≤' }
            ];
            
            graphs.forEach((graph, idx) => {
                const y = margin + idx * (graphH + margin);
                drawGraph(margin, y, w - 2*margin, graphH, graph.data, graph.color, graph.label, graph.unit);
            });
        }
        
        function drawGraph(x, y, w, h, data, color, label, unit) {
            // Background
            ctx.fillStyle = 'rgba(30, 39, 73, 0.5)';
            ctx.fillRect(x, y, w, h);
            
            // Border
            ctx.strokeStyle = 'rgba(45, 58, 110, 0.8)';
            ctx.strokeRect(x, y, w, h);
            
            // Label
            ctx.fillStyle = color;
            ctx.font = 'bold 14px Manrope';
            ctx.fillText(label, x + 10, y + 20);
            
            // Zero line
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.2)';
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            ctx.moveTo(x, y + h/2);
            ctx.lineTo(x + w, y + h/2);
            ctx.stroke();
            ctx.setLineDash([]);
            
            // Data
            if (data.length > 1) {
                const max = Math.max(...data.map(Math.abs), 0.01);
                
                ctx.strokeStyle = color;
                ctx.lineWidth = 2;
                ctx.beginPath();
                
                for (let i = 0; i < data.length; i++) {
                    const px = x + (i / history.maxPoints) * w;
                    const py = y + h/2 - (data[i] / max) * (h * 0.4);
                    
                    if (i === 0) {
                        ctx.moveTo(px, py);
                    } else {
                        ctx.lineTo(px, py);
                    }
                }
                ctx.stroke();
                ctx.lineWidth = 1;
                
                // Current value
                const currentValue = data[data.length - 1] || 0;
                ctx.fillStyle = '#e0e6ff';
                ctx.font = '12px JetBrains Mono';
                ctx.fillText(`${currentValue.toFixed(3)} ${unit}`, x + w - 120, y + 20);
            }
        }
        
        function drawVectors(w, h) {
            const omega = Math.sqrt(params.stiffness / params.mass);
            const x = params.amplitude * Math.cos(omega * time + params.phase);
            const v = -params.amplitude * omega * Math.sin(omega * time + params.phase);
            const a = -params.amplitude * omega * omega * Math.cos(omega * time + params.phase);
            const F = -params.stiffness * x;
            
            const centerX = w / 2;
            const centerY = h / 2;
            const scale = 1500;
            const massX = centerX + x * scale;
            
            // Draw mass
            const massSize = 50;
            ctx.fillStyle = '#00d4ff';
            ctx.shadowColor = 'rgba(0, 212, 255, 0.5)';
            ctx.shadowBlur = 20;
            ctx.beginPath();
            ctx.arc(massX, centerY, massSize/2, 0, Math.PI * 2);
            ctx.fill();
            ctx.shadowBlur = 0;
            
            // Draw vectors
            const vScale = 200;
            const aScale = 20;
            const fScale = 2;
            
            // Position vector
            drawVector(centerX, centerY, massX - centerX, 0, '#00d4ff', 'x');
            
            // Velocity vector
            drawVector(massX, centerY, v * vScale, 0, '#ffbe0b', 'v');
            
            // Acceleration vector
            drawVector(massX, centerY - 60, a * aScale, 0, '#ff006e', 'a');
            
            // Force vector
            drawVector(massX, centerY + 60, F * fScale, 0, '#00f5a0', 'F');
            
            // Legend
            const legends = [
                { color: '#00d4ff', label: 'Siljish (x)' },
                { color: '#ffbe0b', label: 'Tezlik (v)' },
                { color: '#ff006e', label: 'Tezlanish (a)' },
                { color: '#00f5a0', label: 'Kuch (F)' }
            ];
            
            legends.forEach((item, idx) => {
                const lx = 20;
                const ly = 30 + idx * 30;
                
                ctx.fillStyle = item.color;
                ctx.fillRect(lx, ly - 10, 20, 4);
                ctx.fillText(item.label, lx + 30, ly);
            });
        }
        
        function drawVector(x, y, dx, dy, color, label) {
            const length = Math.sqrt(dx*dx + dy*dy);
            if (length < 1) return;
            
            // Arrow body
            ctx.strokeStyle = color;
            ctx.lineWidth = 3;
            ctx.beginPath();
            ctx.moveTo(x, y);
            ctx.lineTo(x + dx, y + dy);
            ctx.stroke();
            
            // Arrow head
            const angle = Math.atan2(dy, dx);
            const headLen = 15;
            
            ctx.fillStyle = color;
            ctx.beginPath();
            ctx.moveTo(x + dx, y + dy);
            ctx.lineTo(
                x + dx - headLen * Math.cos(angle - Math.PI/6),
                y + dy - headLen * Math.sin(angle - Math.PI/6)
            );
            ctx.lineTo(
                x + dx - headLen * Math.cos(angle + Math.PI/6),
                y + dy - headLen * Math.sin(angle + Math.PI/6)
            );
            ctx.closePath();
            ctx.fill();
            
            // Label
            ctx.fillStyle = color;
            ctx.font = 'bold 14px JetBrains Mono';
            ctx.fillText(label, x + dx + 10, y + dy - 5);
            
            ctx.lineWidth = 1;
        }
        
        function updateEnergyBars() {
            const omega = Math.sqrt(params.stiffness / params.mass);
            const x = params.amplitude * Math.cos(omega * time + params.phase);
            const v = -params.amplitude * omega * Math.sin(omega * time + params.phase);
            
            const K = 0.5 * params.mass * v * v;
            const U = 0.5 * params.stiffness * x * x;
            const E = 0.5 * params.stiffness * params.amplitude * params.amplitude;
            
            document.getElementById('kineticValue').textContent = K.toFixed(2) + ' J';
            document.getElementById('potentialValue').textContent = U.toFixed(2) + ' J';
            document.getElementById('totalValue').textContent = E.toFixed(2) + ' J';
            
            const kPercent = E > 0 ? (K / E) * 100 : 0;
            const uPercent = E > 0 ? (U / E) * 100 : 0;
            
            document.getElementById('kineticBar').style.width = kPercent + '%';
            document.getElementById('potentialBar').style.width = uPercent + '%';
        }
        
        function setView(view) {
            currentView = view;
            
            document.querySelectorAll('.view-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            event.target.classList.add('active');
            
            if (!isPlaying) {
                drawFrame();
            }
        }
        
        function applyPreset(preset) {
            const presets = {
                slow: { amplitude: 0.15, mass: 3.0, stiffness: 50, phase: 0 },
                normal: { amplitude: 0.10, mass: 1.0, stiffness: 100, phase: 0 },
                fast: { amplitude: 0.05, mass: 0.5, stiffness: 200, phase: 0 },
                heavy: { amplitude: 0.08, mass: 5.0, stiffness: 100, phase: 0 },
                light: { amplitude: 0.12, mass: 0.2, stiffness: 100, phase: 0 },
                resonance: { amplitude: 0.18, mass: 1.0, stiffness: 150, phase: Math.PI/2 }
            };
            
            if (presets[preset]) {
                params.amplitude = presets[preset].amplitude;
                params.mass = presets[preset].mass;
                params.stiffness = presets[preset].stiffness;
                params.phase = presets[preset].phase;
                
                document.getElementById('amplitudeSlider').value = params.amplitude;
                document.getElementById('amplitudeValue').textContent = params.amplitude.toFixed(2) + ' m';
                
                document.getElementById('massSlider').value = params.mass;
                document.getElementById('massValue').textContent = params.mass.toFixed(1) + ' kg';
                
                document.getElementById('stiffnessSlider').value = params.stiffness;
                document.getElementById('stiffnessValue').textContent = params.stiffness.toFixed(0) + ' N/m';
                
                document.getElementById('phaseSlider').value = (params.phase * 180 / Math.PI).toFixed(0);
                document.getElementById('phaseValue').textContent = (params.phase * 180 / Math.PI).toFixed(0) + '¬∞';
                
                resetSimulation();
                updateCalculations();
            }
        }
        
        function exportData() {
            if (history.time.length === 0) {
                alert('Avval simulyatsiyani ishga tushiring!');
                return;
            }
            
            let csv = 'Vaqt (s),Siljish (m),Tezlik (m/s),Tezlanish (m/s¬≤)\n';
            
            for (let i = 0; i < history.time.length; i++) {
                csv += `${history.time[i].toFixed(4)},${history.position[i].toFixed(6)},${history.velocity[i].toFixed(6)},${history.acceleration[i].toFixed(6)}\n`;
            }
            
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'tebranish_data.csv';
            a.click();
            URL.revokeObjectURL(url);
        }
        
        function exportScreenshot() {
            const link = document.createElement('a');
            link.download = 'tebranish_screenshot.png';
            link.href = canvas.toDataURL();
            link.click();
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            switch(e.key) {
                case ' ':
                    e.preventDefault();
                    togglePlayPause();
                    break;
                case 'r':
                case 'R':
                    resetSimulation();
                    break;
                case '1':
                    setView('animation');
                    break;
                case '2':
                    setView('graphs');
                    break;
                case '3':
                    setView('vectors');
                    break;
            }
        });
    </script>
</body>
</html>
