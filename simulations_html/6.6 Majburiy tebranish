    <script>
        // Configuration and state
        const config = {
            omega0: 5,
            omegaE: 5,
            gamma: 0.5,
            F0: 10,
            mass: 1,
            speed: 1,
            playing: false,
            time: 0,
            dt: 0.02,
            historyLength: 500
        };

        const state = {
            position: 0,
            velocity: 0,
            history: [],
            forceHistory: []
        };

        // Canvas contexts
        const mainCanvas = document.getElementById('mainCanvas');
        const mainCtx = mainCanvas.getContext('2d');
        const responseCanvas = document.getElementById('responseCanvas');
        const responseCtx = responseCanvas.getContext('2d');
        const phaseCanvas = document.getElementById('phaseCanvas');
        const phaseCtx = phaseCanvas.getContext('2d');
        const lissajousCanvas = document.getElementById('lissajousCanvas');
        const lissajousCtx = lissajousCanvas.getContext('2d');

        // Set canvas size for retina displays
        function setupCanvas(canvas) {
            const rect = canvas.getBoundingClientRect();
            const dpr = window.devicePixelRatio || 1;
            canvas.width = rect.width * dpr;
            canvas.height = rect.height * dpr;
            const ctx = canvas.getContext('2d');
            ctx.scale(dpr, dpr);
            return { width: rect.width, height: rect.height };
        }

        let mainSize = setupCanvas(mainCanvas);
        let responseSize = setupCanvas(responseCanvas);
        let phaseSize = setupCanvas(phaseCanvas);
        let lissajousSize = setupCanvas(lissajousCanvas);

        window.addEventListener('resize', () => {
            mainSize = setupCanvas(mainCanvas);
            responseSize = setupCanvas(responseCanvas);
            phaseSize = setupCanvas(phaseCanvas);
            lissajousSize = setupCanvas(lissajousCanvas);
            drawAll();
        });

        // Physics calculations
        function calculateSteadyStateAmplitude(omegaE) {
            const omega02 = config.omega0 * config.omega0;
            const omegaE2 = omegaE * omegaE;
            const denominator = Math.sqrt(
                Math.pow(omega02 - omegaE2, 2) + 
                Math.pow(config.gamma * omegaE, 2)
            );
            return (config.F0 / config.mass) / denominator;
        }

        function calculatePhase(omegaE) {
            const omega02 = config.omega0 * config.omega0;
            const omegaE2 = omegaE * omegaE;
            return Math.atan2(
                config.gamma * omegaE,
                omega02 - omegaE2
            );
        }

        function calculateResonanceFrequency() {
            const gamma2 = config.gamma * config.gamma;
            const omega02 = config.omega0 * config.omega0;
            const res = omega02 - gamma2 / 2;
            return res > 0 ? Math.sqrt(res) : config.omega0;
        }

        function calculateQFactor() {
            return config.omega0 / config.gamma;
        }

        // Differential equation solver (RK4)
        function updatePhysics() {
            const k = config.omega0 * config.omega0;
            const force = config.F0 * Math.cos(config.omegaE * config.time);
            
            // RK4 method
            const dt = config.dt * config.speed;
            
            function derivatives(x, v, t) {
                const f = config.F0 * Math.cos(config.omegaE * t);
                const ax = (f - config.gamma * v - k * x) / config.mass;
                return { dx: v, dv: ax };
            }
            
            const k1 = derivatives(state.position, state.velocity, config.time);
            const k2 = derivatives(
                state.position + 0.5 * dt * k1.dx,
                state.velocity + 0.5 * dt * k1.dv,
                config.time + 0.5 * dt
            );
            const k3 = derivatives(
                state.position + 0.5 * dt * k2.dx,
                state.velocity + 0.5 * dt * k2.dv,
                config.time + 0.5 * dt
            );
            const k4 = derivatives(
                state.position + dt * k3.dx,
                state.velocity + dt * k3.dv,
                config.time + dt
            );
            
            state.position += (dt / 6) * (k1.dx + 2 * k2.dx + 2 * k3.dx + k4.dx);
            state.velocity += (dt / 6) * (k1.dv + 2 * k2.dv + 2 * k3.dv + k4.dv);
            
            config.time += dt;
            
            // Store history
            state.history.push({ t: config.time, x: state.position });
            state.forceHistory.push({ t: config.time, f: force });
            
            if (state.history.length > config.historyLength) {
                state.history.shift();
                state.forceHistory.shift();
            }
        }

        // Drawing functions
        function drawMainGraph() {
            const ctx = mainCtx;
            const w = mainSize.width;
            const h = mainSize.height;
            
            ctx.clearRect(0, 0, w, h);
            
            // Grid
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.lineWidth = 1;
            for (let i = 0; i <= 10; i++) {
                const y = (h / 10) * i;
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(w, y);
                ctx.stroke();
            }
            
            const padding = 40;
            const graphW = w - 2 * padding;
            const graphH = h - 2 * padding;
            
            if (state.history.length < 2) return;
            
            // Calculate scales
            const timeRange = Math.max(20, state.history[state.history.length - 1].t - state.history[0].t);
            const maxX = Math.max(...state.history.map(p => Math.abs(p.x)), 1);
            const maxF = Math.max(...state.forceHistory.map(p => Math.abs(p.f)), 1);
            const maxVal = Math.max(maxX, maxF);
            
            // Calculate steady state amplitude
            const steadyAmp = calculateSteadyStateAmplitude(config.omegaE);
            const phase = calculatePhase(config.omegaE);
            
            // Draw steady state envelope
            ctx.strokeStyle = 'rgba(0, 217, 255, 0.2)';
            ctx.lineWidth = 2;
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            for (let i = 0; i < graphW; i++) {
                const t = config.time - timeRange + (i / graphW) * timeRange;
                const y = steadyAmp * Math.cos(config.omegaE * t - phase);
                const x = padding + i;
                const yPos = padding + graphH / 2 - (y / maxVal) * (graphH / 2) * 0.8;
                if (i === 0) ctx.moveTo(x, yPos);
                else ctx.lineTo(x, yPos);
            }
            ctx.stroke();
            ctx.setLineDash([]);
            
            // Draw transient (actual response)
            ctx.strokeStyle = '#00d9ff';
            ctx.lineWidth = 2.5;
            ctx.beginPath();
            state.history.forEach((point, i) => {
                const x = padding + ((point.t - state.history[0].t) / timeRange) * graphW;
                const y = padding + graphH / 2 - (point.x / maxVal) * (graphH / 2) * 0.8;
                if (i === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            });
            ctx.stroke();
            
            // Draw driving force
            ctx.strokeStyle = '#ff6b6b';
            ctx.lineWidth = 1.5;
            ctx.globalAlpha = 0.6;
            ctx.beginPath();
            state.forceHistory.forEach((point, i) => {
                const x = padding + ((point.t - state.forceHistory[0].t) / timeRange) * graphW;
                const y = padding + graphH / 2 - (point.f / maxVal) * (graphH / 2) * 0.8;
                if (i === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            });
            ctx.stroke();
            ctx.globalAlpha = 1;
            
            // Axes
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.5)';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(padding, padding + graphH / 2);
            ctx.lineTo(w - padding, padding + graphH / 2);
            ctx.stroke();
            
            // Labels
            ctx.fillStyle = '#a0a0a0';
            ctx.font = '12px Segoe UI';
            ctx.textAlign = 'center';
            ctx.fillText('Vaqt (t)', w / 2, h - 10);
            ctx.save();
            ctx.translate(15, h / 2);
            ctx.rotate(-Math.PI / 2);
            ctx.fillText('x(t)', 0, 0);
            ctx.restore();
        }

        function drawAmplitudeResponse() {
            const ctx = responseCtx;
            const w = responseSize.width;
            const h = responseSize.height;
            
            ctx.clearRect(0, 0, w, h);
            
            const padding = 50;
            const graphW = w - 2 * padding;
            const graphH = h - 2 * padding;
            
            // Grid
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.lineWidth = 1;
            for (let i = 0; i <= 10; i++) {
                const y = padding + (graphH / 10) * i;
                ctx.beginPath();
                ctx.moveTo(padding, y);
                ctx.lineTo(w - padding, y);
                ctx.stroke();
            }
            
            // Calculate response curve
            const points = [];
            const omegaMin = 0.1;
            const omegaMax = config.omega0 * 3;
            const steps = 200;
            
            let maxAmp = 0;
            for (let i = 0; i < steps; i++) {
                const omega = omegaMin + (omegaMax - omegaMin) * (i / steps);
                const amp = calculateSteadyStateAmplitude(omega);
                points.push({ omega, amp });
                maxAmp = Math.max(maxAmp, amp);
            }
            
            // Draw curve
            ctx.strokeStyle = '#4ecdc4';
            ctx.lineWidth = 3;
            ctx.beginPath();
            points.forEach((point, i) => {
                const x = padding + ((point.omega - omegaMin) / (omegaMax - omegaMin)) * graphW;
                const y = padding + graphH - (point.amp / maxAmp) * graphH * 0.9;
                if (i === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            });
            ctx.stroke();
            
            // Mark current frequency
            const currentX = padding + ((config.omegaE - omegaMin) / (omegaMax - omegaMin)) * graphW;
            const currentAmp = calculateSteadyStateAmplitude(config.omegaE);
            const currentY = padding + graphH - (currentAmp / maxAmp) * graphH * 0.9;
            
            ctx.fillStyle = '#00d9ff';
            ctx.beginPath();
            ctx.arc(currentX, currentY, 6, 0, Math.PI * 2);
            ctx.fill();
            
            // Mark resonance frequency
            const resFreq = calculateResonanceFrequency();
            const resX = padding + ((resFreq - omegaMin) / (omegaMax - omegaMin)) * graphW;
            ctx.strokeStyle = '#ff6b6b';
            ctx.lineWidth = 2;
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            ctx.moveTo(resX, padding);
            ctx.lineTo(resX, padding + graphH);
            ctx.stroke();
            ctx.setLineDash([]);
            
            // Axes
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.5)';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(padding, padding);
            ctx.lineTo(padding, padding + graphH);
            ctx.lineTo(w - padding, padding + graphH);
            ctx.stroke();
            
            // Labels
            ctx.fillStyle = '#a0a0a0';
            ctx.font = '12px Segoe UI';
            ctx.textAlign = 'center';
            ctx.fillText('œâ‚Çë (Haydovchi chastota)', w / 2, h - 10);
            ctx.save();
            ctx.translate(15, h / 2);
            ctx.rotate(-Math.PI / 2);
            ctx.fillText('Amplituda (A)', 0, 0);
            ctx.restore();
            
            // Legend
            ctx.font = '11px Segoe UI';
            ctx.fillStyle = '#ff6b6b';
            ctx.fillText('œâ‚ÇÄ = ' + config.omega0.toFixed(1), resX, padding - 5);
        }

        function drawPhaseResponse() {
            const ctx = phaseCtx;
            const w = phaseSize.width;
            const h = phaseSize.height;
            
            ctx.clearRect(0, 0, w, h);
            
            const padding = 50;
            const graphW = w - 2 * padding;
            const graphH = h - 2 * padding;
            
            // Grid
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.lineWidth = 1;
            for (let i = 0; i <= 10; i++) {
                const y = padding + (graphH / 10) * i;
                ctx.beginPath();
                ctx.moveTo(padding, y);
                ctx.lineTo(w - padding, y);
                ctx.stroke();
            }
            
            // Calculate phase curve
            const points = [];
            const omegaMin = 0.1;
            const omegaMax = config.omega0 * 3;
            const steps = 200;
            
            for (let i = 0; i < steps; i++) {
                const omega = omegaMin + (omegaMax - omegaMin) * (i / steps);
                const phase = calculatePhase(omega);
                points.push({ omega, phase });
            }
            
            // Draw curve
            ctx.strokeStyle = '#bb86fc';
            ctx.lineWidth = 3;
            ctx.beginPath();
            points.forEach((point, i) => {
                const x = padding + ((point.omega - omegaMin) / (omegaMax - omegaMin)) * graphW;
                const y = padding + graphH - ((point.phase + Math.PI / 2) / Math.PI) * graphH * 0.9;
                if (i === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            });
            ctx.stroke();
            
            // Mark current frequency
            const currentX = padding + ((config.omegaE - omegaMin) / (omegaMax - omegaMin)) * graphW;
            const currentPhase = calculatePhase(config.omegaE);
            const currentY = padding + graphH - ((currentPhase + Math.PI / 2) / Math.PI) * graphH * 0.9;
            
            ctx.fillStyle = '#00d9ff';
            ctx.beginPath();
            ctx.arc(currentX, currentY, 6, 0, Math.PI * 2);
            ctx.fill();
            
            // Mark œÄ/2 line
            const piHalfY = padding + graphH / 2;
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
            ctx.lineWidth = 1;
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            ctx.moveTo(padding, piHalfY);
            ctx.lineTo(w - padding, piHalfY);
            ctx.stroke();
            ctx.setLineDash([]);
            
            // Axes
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.5)';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(padding, padding);
            ctx.lineTo(padding, padding + graphH);
            ctx.lineTo(w - padding, padding + graphH);
            ctx.stroke();
            
            // Labels
            ctx.fillStyle = '#a0a0a0';
            ctx.font = '12px Segoe UI';
            ctx.textAlign = 'center';
            ctx.fillText('œâ‚Çë (Haydovchi chastota)', w / 2, h - 10);
            ctx.save();
            ctx.translate(15, h / 2);
            ctx.rotate(-Math.PI / 2);
            ctx.fillText('Faza (œÜ)', 0, 0);
            ctx.restore();
            
            // Phase markers
            ctx.textAlign = 'right';
            ctx.fillText('œÄ', padding - 5, padding + 10);
            ctx.fillText('œÄ/2', padding - 5, piHalfY + 5);
            ctx.fillText('0', padding - 5, padding + graphH + 5);
        }

        function drawLissajous() {
            const ctx = lissajousCtx;
            const w = lissajousSize.width;
            const h = lissajousSize.height;
            
            ctx.clearRect(0, 0, w, h);
            
            const centerX = w / 2;
            const centerY = h / 2;
            const scale = Math.min(w, h) * 0.35;
            
            // Grid and axes
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.lineWidth = 1;
            
            // Circles
            for (let i = 1; i <= 3; i++) {
                ctx.beginPath();
                ctx.arc(centerX, centerY, scale * i / 3, 0, Math.PI * 2);
                ctx.stroke();
            }
            
            // Axes
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
            ctx.lineWidth = 1.5;
            ctx.beginPath();
            ctx.moveTo(centerX, 0);
            ctx.lineTo(centerX, h);
            ctx.moveTo(0, centerY);
            ctx.lineTo(w, centerY);
            ctx.stroke();
            
            if (state.history.length < 2) return;
            
            // Calculate max values for scaling
            const maxX = Math.max(...state.history.map(p => Math.abs(p.x)), 1);
            const maxV = Math.max(...state.history.map((p, i) => {
                if (i === 0) return 0;
                return Math.abs((state.history[i].x - state.history[i-1].x) / 
                    (state.history[i].t - state.history[i-1].t));
            }), 1);
            
            // Draw trajectory with gradient
            const gradient = ctx.createLinearGradient(0, 0, w, h);
            gradient.addColorStop(0, 'rgba(0, 217, 255, 0.3)');
            gradient.addColorStop(1, 'rgba(0, 217, 255, 1)');
            
            ctx.strokeStyle = gradient;
            ctx.lineWidth = 2;
            ctx.beginPath();
            
            state.history.forEach((point, i) => {
                if (i === 0) return;
                const x = centerX + (point.x / maxX) * scale;
                const v = (point.x - state.history[i-1].x) / (point.t - state.history[i-1].t);
                const y = centerY - (v / maxV) * scale;
                
                if (i === 1) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            });
            ctx.stroke();
            
            // Current position marker
            if (state.history.length > 0) {
                const lastPoint = state.history[state.history.length - 1];
                const x = centerX + (lastPoint.x / maxX) * scale;
                const v = state.velocity;
                const y = centerY - (v / maxV) * scale;
                
                ctx.fillStyle = '#00d9ff';
                ctx.beginPath();
                ctx.arc(x, y, 5, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.strokeStyle = '#00d9ff';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.arc(x, y, 8, 0, Math.PI * 2);
                ctx.stroke();
            }
            
            // Labels
            ctx.fillStyle = '#a0a0a0';
            ctx.font = '12px Segoe UI';
            ctx.textAlign = 'center';
            ctx.fillText('Pozitsiya (x)', centerX, h - 10);
            ctx.save();
            ctx.translate(15, centerY);
            ctx.rotate(-Math.PI / 2);
            ctx.fillText('Tezlik (v)', 0, 0);
            ctx.restore();
        }

        function drawAll() {
            drawMainGraph();
            drawAmplitudeResponse();
            drawPhaseResponse();
            drawLissajous();
        }

        // Update statistics
        function updateStats() {
            const amp = calculateSteadyStateAmplitude(config.omegaE);
            const phase = calculatePhase(config.omegaE);
            const resFreq = calculateResonanceFrequency();
            const q = calculateQFactor();
            
            document.getElementById('amplitudeValue').textContent = amp.toFixed(3);
            document.getElementById('phaseValue').textContent = (phase * 180 / Math.PI).toFixed(1) + '¬∞';
            document.getElementById('resonanceFreq').textContent = resFreq.toFixed(2);
            document.getElementById('qFactor').textContent = q.toFixed(2);
        }

        // Animation loop
        let animationId = null;
        function animate() {
            if (!config.playing) return;
            
            updatePhysics();
            drawAll();
            updateStats();
            
            animationId = requestAnimationFrame(animate);
        }

        // Controls
        document.getElementById('playPauseBtn').addEventListener('click', function() {
            config.playing = !config.playing;
            this.textContent = config.playing ? '‚è∏Ô∏è Pauza' : '‚ñ∂Ô∏è Boshlash';
            if (config.playing) {
                animate();
            } else if (animationId) {
                cancelAnimationFrame(animationId);
            }
        });

        document.getElementById('resetBtn').addEventListener('click', function() {
            config.time = 0;
            state.position = 0;
            state.velocity = 0;
            state.history = [];
            state.forceHistory = [];
            drawAll();
            updateStats();
        });

        // Sliders
        const sliders = {
            omega0: document.getElementById('omega0Slider'),
            omegaE: document.getElementById('omegaESlider'),
            gamma: document.getElementById('gammaSlider'),
            f0: document.getElementById('f0Slider'),
            mass: document.getElementById('massSlider'),
            speed: document.getElementById('speedSlider')
        };

        const values = {
            omega0: document.getElementById('omega0Value'),
            omegaE: document.getElementById('omegaEValue'),
            gamma: document.getElementById('gammaValue'),
            f0: document.getElementById('f0Value'),
            mass: document.getElementById('massValue'),
            speed: document.getElementById('speedValue')
        };

        sliders.omega0.addEventListener('input', function() {
            config.omega0 = parseFloat(this.value);
            values.omega0.textContent = config.omega0.toFixed(1);
            drawAll();
            updateStats();
        });

        sliders.omegaE.addEventListener('input', function() {
            config.omegaE = parseFloat(this.value);
            values.omegaE.textContent = config.omegaE.toFixed(1);
            drawAll();
            updateStats();
        });

        sliders.gamma.addEventListener('input', function() {
            config.gamma = parseFloat(this.value);
            values.gamma.textContent = config.gamma.toFixed(1);
            drawAll();
            updateStats();
        });

        sliders.f0.addEventListener('input', function() {
            config.F0 = parseFloat(this.value);
            values.f0.textContent = config.F0.toFixed(1);
            drawAll();
            updateStats();
        });

        sliders.mass.addEventListener('input', function() {
            config.mass = parseFloat(this.value);
            values.mass.textContent = config.mass.toFixed(1);
            drawAll();
            updateStats();
        });

        sliders.speed.addEventListener('input', function() {
            config.speed = parseFloat(this.value);
            values.speed.textContent = config.speed.toFixed(1) + 'x';
        });

        // Presets
        const presets = {
            resonance: { omega0: 5, omegaE: 5, gamma: 0.5, F0: 10, mass: 1 },
            underdamped: { omega0: 5, omegaE: 5, gamma: 0.3, F0: 10, mass: 1 },
            overdamped: { omega0: 5, omegaE: 5, gamma: 2.5, F0: 10, mass: 1 },
            lowfreq: { omega0: 5, omegaE: 2, gamma: 0.5, F0: 10, mass: 1 },
            highfreq: { omega0: 5, omegaE: 12, gamma: 0.5, F0: 10, mass: 1 },
            strong: { omega0: 5, omegaE: 5, gamma: 0.5, F0: 25, mass: 1 }
        };

        document.querySelectorAll('.preset-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const preset = presets[this.dataset.preset];
                if (preset) {
                    Object.assign(config, preset);
                    
                    sliders.omega0.value = config.omega0;
                    sliders.omegaE.value = config.omegaE;
                    sliders.gamma.value = config.gamma;
                    sliders.f0.value = config.F0;
                    sliders.mass.value = config.mass;
                    
                    values.omega0.textContent = config.omega0.toFixed(1);
                    values.omegaE.textContent = config.omegaE.toFixed(1);
                    values.gamma.textContent = config.gamma.toFixed(1);
                    values.f0.textContent = config.F0.toFixed(1);
                    values.mass.textContent = config.mass.toFixed(1);
                    
                    config.time = 0;
                    state.position = 0;
                    state.velocity = 0;
                    state.history = [];
                    state.forceHistory = [];
                    
                    drawAll();
                    updateStats();
                }
            });
        });

        // Tabs
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                this.classList.add('active');
                document.getElementById(this.dataset.tab).classList.add('active');
                
                // Retrigger MathJax rendering
                if (window.MathJax) {
                    MathJax.typesetPromise();
                }
            });
        });

        // Touch support for mobile
        let touchStartX = 0;
        let touchStartY = 0;

        mainCanvas.addEventListener('touchstart', (e) => {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
        });

        mainCanvas.addEventListener('touchmove', (e) => {
            e.preventDefault();
        }, { passive: false });

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                e.preventDefault();
                document.getElementById('playPauseBtn').click();
            } else if (e.code === 'KeyR') {
                document.getElementById('resetBtn').click();
            }
        });

        // Initial render
        drawAll();
        updateStats();
        
        // Trigger MathJax
        if (window.MathJax) {
            MathJax.typesetPromise();
        }
    </script>
</body>
</html>
