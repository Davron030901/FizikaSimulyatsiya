        <div class="theory-section">
            <h2>Nazariy Ma'lumotlar</h2>
            <div class="theory-content">
                <div class="theory-item">
                    <h3>So'nuvchi Tebranish Tenglamasi</h3>
                    <p>So'nuvchi tebranish quyidagi tenglama bilan ifodalanadi:</p>
                    <div class="formula-display">
                        $$x(t) = Ae^{-\gamma t}\cos(\omega t + \phi)$$
                    </div>
                    <p>Bu yerda:</p>
                    <ul style="color: var(--text-secondary); margin-left: 20px;">
                        <li><strong>A</strong> - boshlang'ich amplituda</li>
                        <li><strong>γ</strong> - so'nish koeffitsienti</li>
                        <li><strong>ω</strong> - burchak chastotasi</li>
                        <li><strong>φ</strong> - boshlang'ich faza</li>
                    </ul>
                </div>

                <div class="theory-item">
                    <h3>So'nish Turlari</h3>
                    <p><strong>Kam so'nish (Underdamped):</strong> γ < ω₀. Tizim tebranadi va vaqt o'tishi bilan amplituda kamayib boradi.</p>
                    <p><strong>Kritik so'nish (Critical):</strong> γ = ω₀. Tizim tebranmasdan eng tez muvozanat holatiga qaytadi.</p>
                    <p><strong>Ortiqcha so'nish (Overdamped):</strong> γ > ω₀. Tizim sekin muvozanat holatiga qaytadi, tebranmaydi.</p>
                </div>

                <div class="theory-item">
                    <h3>Sifat Faktori (Q)</h3>
                    <p>Sifat faktori tebranish tizimining samaradorligini bildiradi:</p>
                    <div class="formula-display">
                        $$Q = \frac{\omega}{2\gamma}$$
                    </div>
                    <p>Yuqori Q qiymati - kam energiya yo'qolishi va uzoqroq tebranish. Past Q qiymati - tez so'nish.</p>
                </div>

                <div class="theory-item">
                    <h3>Energiya Yo'qolishi</h3>
                    <p>So'nuvchi tebranishda energiya vaqt o'tishi bilan eksponensial ravishda kamayadi:</p>
                    <div class="formula-display">
                        $$E(t) = E_0 e^{-2\gamma t}$$
                    </div>
                    <p>Bu yerda E₀ - boshlang'ich energiya. Energiya yo'qolishi ishqalanish yoki qarshilik tufayli yuzaga keladi.</p>
                </div>

                <div class="theory-item">
                    <h3>Amaliy Qo'llanishlar</h3>
                    <p><strong>Mexanika:</strong> Amortizatorlar, tebranish izolyatorlari</p>
                    <p><strong>Elektronika:</strong> RLC konturlar, filtrlar</p>
                    <p><strong>Akustika:</strong> Ovoz tebranishlari, musiqa asboblari</p>
                    <p><strong>Injenerlik:</strong> Binolar va ko'priklar dinamikasi</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Canvas va kontekst
        const canvas = document.getElementById('oscillationCanvas');
        const ctx = canvas.getContext('2d');

        // Canvas o'lchamlarini o'rnatish
        function resizeCanvas() {
            const container = canvas.parentElement;
            canvas.width = container.clientWidth * window.devicePixelRatio;
            canvas.height = container.clientHeight * window.devicePixelRatio;
            ctx.scale(window.devicePixelRatio, window.devicePixelRatio);
            canvas.style.width = container.clientWidth + 'px';
            canvas.style.height = container.clientHeight + 'px';
        }

        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();

        // Parametrlar
        let params = {
            amplitude: 1.0,
            damping: 0.2,
            frequency: 2.0,
            phase: 0.0,
            mode: 'underdamped'
        };

        let time = 0;
        let isPlaying = false;
        let speed = 1.0;
        let history = [];
        const maxHistory = 500;

        // Vizual sozlamalar
        let showEnvelope = true;
        let showGrid = true;
        let showTrail = true;

        // Elementlar
        const playPauseBtn = document.getElementById('playPauseBtn');
        const resetBtn = document.getElementById('resetBtn');
        const stepBtn = document.getElementById('stepBtn');
        const speedSlider = document.getElementById('speedSlider');
        const speedValue = document.getElementById('speedValue');

        // Slider elementlari
        const amplitudeSlider = document.getElementById('amplitudeSlider');
        const dampingSlider = document.getElementById('dampingSlider');
        const frequencySlider = document.getElementById('frequencySlider');
        const phaseSlider = document.getElementById('phaseSlider');

        // Display elementlari
        const amplitudeDisplay = document.getElementById('amplitudeDisplay');
        const dampingDisplay = document.getElementById('dampingDisplay');
        const frequencyDisplay = document.getElementById('frequencyDisplay');
        const phaseDisplay = document.getElementById('phaseDisplay');

        // Stat elementlari
        const timeValue = document.getElementById('timeValue');
        const positionValue = document.getElementById('positionValue');
        const amplitudeValue = document.getElementById('amplitudeValue');
        const energyValue = document.getElementById('energyValue');
        const qualityFactor = document.getElementById('qualityFactor');

        // So'nuvchi tebranish hisobi
        function calculatePosition(t) {
            const { amplitude, damping, frequency, phase, mode } = params;
            
            if (mode === 'underdamped') {
                return amplitude * Math.exp(-damping * t) * Math.cos(frequency * t + phase);
            } else if (mode === 'critical') {
                return amplitude * (1 + damping * t) * Math.exp(-damping * t);
            } else { // overdamped
                const r1 = -damping + Math.sqrt(damping * damping - frequency * frequency);
                const r2 = -damping - Math.sqrt(damping * damping - frequency * frequency);
                return amplitude * (Math.exp(r1 * t) + Math.exp(r2 * t)) / 2;
            }
        }

        // Envelope hisobi
        function calculateEnvelope(t) {
            return params.amplitude * Math.exp(-params.damping * t);
        }

        // Energiya hisobi
        function calculateEnergy(t) {
            return Math.exp(-2 * params.damping * t) * 100;
        }

        // Sifat faktori
        function calculateQuality() {
            return params.frequency / (2 * params.damping);
        }

        // Chizish funksiyasi
        function draw() {
            const w = canvas.clientWidth;
            const h = canvas.clientHeight;
            
            // Tozalash
            ctx.fillStyle = '#000000';
            ctx.fillRect(0, 0, w, h);

            // Grid
            if (showGrid) {
                drawGrid(w, h);
            }

            // O'qlar
            drawAxes(w, h);

            // Envelope
            if (showEnvelope) {
                drawEnvelope(w, h);
            }

            // Tarix
            if (showTrail && history.length > 1) {
                drawHistory(w, h);
            }

            // Asosiy egri chiziq
            drawOscillation(w, h);

            // Hozirgi pozitsiya
            drawCurrentPosition(w, h);
        }

        function drawGrid(w, h) {
            ctx.strokeStyle = '#38383a';
            ctx.lineWidth = 0.5;

            // Vertikal chiziqlar
            for (let x = 0; x < w; x += 40) {
                ctx.beginPath();
                ctx.moveTo(x, 0);
                ctx.lineTo(x, h);
                ctx.stroke();
            }

            // Gorizontal chiziqlar
            for (let y = 0; y < h; y += 40) {
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(w, y);
                ctx.stroke();
            }
        }

        function drawAxes(w, h) {
            const centerY = h / 2;

            // X o'qi
            ctx.strokeStyle = '#98989f';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(0, centerY);
            ctx.lineTo(w, centerY);
            ctx.stroke();

            // Y o'qi
            ctx.beginPath();
            ctx.moveTo(50, 0);
            ctx.lineTo(50, h);
            ctx.stroke();

            // Belgilar
            ctx.fillStyle = '#98989f';
            ctx.font = '12px JetBrains Mono';
            ctx.fillText('x', 30, centerY - 5);
            ctx.fillText('t', w - 20, centerY - 5);
        }

        function drawEnvelope(w, h) {
            const centerY = h / 2;
            const scaleY = (h / 2) * 0.8;
            const scaleX = w / 15;

            ctx.strokeStyle = 'rgba(255, 159, 10, 0.5)';
            ctx.lineWidth = 2;
            ctx.setLineDash([5, 5]);

            // Yuqori envelope
            ctx.beginPath();
            for (let i = 0; i <= w; i += 2) {
                const t = i / scaleX;
                const env = calculateEnvelope(t);
                const y = centerY - env * scaleY;
                if (i === 0) ctx.moveTo(i, y);
                else ctx.lineTo(i, y);
            }
            ctx.stroke();

            // Pastki envelope
            ctx.beginPath();
            for (let i = 0; i <= w; i += 2) {
                const t = i / scaleX;
                const env = calculateEnvelope(t);
                const y = centerY + env * scaleY;
                if (i === 0) ctx.moveTo(i, y);
                else ctx.lineTo(i, y);
            }
            ctx.stroke();

            ctx.setLineDash([]);
        }

        function drawHistory(w, h) {
            const centerY = h / 2;
            const scaleY = (h / 2) * 0.8;
            const scaleX = w / 15;

            const gradient = ctx.createLinearGradient(0, 0, w, 0);
            gradient.addColorStop(0, 'rgba(10, 132, 255, 0.1)');
            gradient.addColorStop(1, 'rgba(10, 132, 255, 0.8)');

            ctx.strokeStyle = gradient;
            ctx.lineWidth = 2;
            ctx.beginPath();

            history.forEach((point, i) => {
                const x = point.t * scaleX;
                const y = centerY - point.x * scaleY;
                if (i === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            });

            ctx.stroke();
        }

        function drawOscillation(w, h) {
            const centerY = h / 2;
            const scaleY = (h / 2) * 0.8;
            const scaleX = w / 15;

            ctx.strokeStyle = '#0a84ff';
            ctx.lineWidth = 3;
            ctx.shadowBlur = 15;
            ctx.shadowColor = 'rgba(10, 132, 255, 0.5)';
            ctx.beginPath();

            for (let i = time * scaleX; i <= w; i += 2) {
                const t = i / scaleX;
                const x = calculatePosition(t);
                const y = centerY - x * scaleY;
                
                if (i === time * scaleX) ctx.moveTo(i, y);
                else ctx.lineTo(i, y);
            }

            ctx.stroke();
            ctx.shadowBlur = 0;
        }

        function drawCurrentPosition(w, h) {
            const centerY = h / 2;
            const scaleY = (h / 2) * 0.8;
            const scaleX = w / 15;

            const currentX = calculatePosition(time);
            const x = time * scaleX;
            const y = centerY - currentX * scaleY;

            // Chiziq
            ctx.strokeStyle = '#ff375f';
            ctx.lineWidth = 2;
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            ctx.moveTo(x, 0);
            ctx.lineTo(x, h);
            ctx.stroke();
            ctx.setLineDash([]);

            // Nuqta
            ctx.fillStyle = '#ff375f';
            ctx.shadowBlur = 20;
            ctx.shadowColor = 'rgba(255, 55, 95, 0.8)';
            ctx.beginPath();
            ctx.arc(x, y, 8, 0, Math.PI * 2);
            ctx.fill();
            ctx.shadowBlur = 0;

            // Massa (vizualizatsiya)
            ctx.fillStyle = '#30d158';
            ctx.beginPath();
            ctx.arc(50, y, 15, 0, Math.PI * 2);
            ctx.fill();
            
            // Prujina
            ctx.strokeStyle = '#98989f';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(50, centerY);
            
            const coils = 12;
            const coilWidth = 20;
            const totalHeight = y - centerY;
            const coilHeight = totalHeight / coils;
            
            for (let i = 0; i < coils; i++) {
                const cy = centerY + coilHeight * i;
                const direction = i % 2 === 0 ? 1 : -1;
                ctx.bezierCurveTo(
                    50 + coilWidth * direction, cy,
                    50 + coilWidth * direction, cy + coilHeight,
                    50, cy + coilHeight
                );
            }
            ctx.stroke();
        }

        // Yangilash funksiyasi
        function update(deltaTime) {
            if (!isPlaying) return;

            time += deltaTime * speed * 0.05;
            
            const currentPos = calculatePosition(time);
            history.push({ t: time, x: currentPos });
            
            if (history.length > maxHistory) {
                history.shift();
            }

            // Statistikani yangilash
            updateStats();
        }

        function updateStats() {
            const currentPos = calculatePosition(time);
            const currentAmp = calculateEnvelope(time);
            const currentEnergy = calculateEnergy(time);
            const q = calculateQuality();

            timeValue.textContent = time.toFixed(2) + ' s';
            positionValue.textContent = currentPos.toFixed(2) + ' m';
            amplitudeValue.textContent = currentAmp.toFixed(2) + ' m';
            energyValue.textContent = currentEnergy.toFixed(1) + '%';
            qualityFactor.textContent = 'Q = ' + q.toFixed(2);
        }

        // Animatsiya davri
        let lastTime = 0;
        function animate(currentTime) {
            const deltaTime = (currentTime - lastTime) / 1000;
            lastTime = currentTime;

            update(deltaTime);
            draw();

            requestAnimationFrame(animate);
        }

        // Boshlash
        requestAnimationFrame(animate);

        // Boshqaruv hodisalari
        playPauseBtn.addEventListener('click', () => {
            isPlaying = !isPlaying;
            playPauseBtn.textContent = isPlaying ? '⏸ Pauza' : '▶ Boshlash';
            playPauseBtn.className = isPlaying ? 'btn-danger' : 'btn-primary';
        });

        resetBtn.addEventListener('click', () => {
            time = 0;
            history = [];
            isPlaying = false;
            playPauseBtn.textContent = '▶ Boshlash';
            playPauseBtn.className = 'btn-primary';
            updateStats();
        });

        stepBtn.addEventListener('click', () => {
            time += 0.1;
            const currentPos = calculatePosition(time);
            history.push({ t: time, x: currentPos });
            if (history.length > maxHistory) history.shift();
            updateStats();
        });

        speedSlider.addEventListener('input', (e) => {
            speed = parseFloat(e.target.value);
            speedValue.textContent = speed.toFixed(1) + 'x';
        });

        // Parametr sliderlar
        amplitudeSlider.addEventListener('input', (e) => {
            params.amplitude = parseFloat(e.target.value);
            amplitudeDisplay.textContent = params.amplitude.toFixed(1) + ' m';
            history = [];
            updateFormula();
        });

        dampingSlider.addEventListener('input', (e) => {
            params.damping = parseFloat(e.target.value);
            dampingDisplay.textContent = params.damping.toFixed(2) + ' s⁻¹';
            history = [];
            updateFormula();
        });

        frequencySlider.addEventListener('input', (e) => {
            params.frequency = parseFloat(e.target.value);
            frequencyDisplay.textContent = params.frequency.toFixed(1) + ' rad/s';
            history = [];
            updateFormula();
        });

        phaseSlider.addEventListener('input', (e) => {
            params.phase = parseFloat(e.target.value);
            phaseDisplay.textContent = params.phase.toFixed(1) + ' rad';
            history = [];
            updateFormula();
        });

        // So'nish rejimini o'zgartirish
        document.querySelectorAll('.mode-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.mode-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                params.mode = btn.dataset.mode;
                history = [];
                
                // Avtomatik parametrlarni moslashtirish
                if (params.mode === 'critical') {
                    params.damping = params.frequency;
                    dampingSlider.value = params.damping;
                    dampingDisplay.textContent = params.damping.toFixed(2) + ' s⁻¹';
                } else if (params.mode === 'overdamped') {
                    params.damping = params.frequency * 1.5;
                    dampingSlider.value = params.damping;
                    dampingDisplay.textContent = params.damping.toFixed(2) + ' s⁻¹';
                }
                
                updateFormula();
            });
        });

        // Preset tugmalari
        document.querySelectorAll('.preset-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const preset = btn.dataset.preset;
                
                switch(preset) {
                    case 'low':
                        params.damping = 0.1;
                        params.frequency = 2.0;
                        params.mode = 'underdamped';
                        break;
                    case 'medium':
                        params.damping = 0.5;
                        params.frequency = 2.0;
                        params.mode = 'underdamped';
                        break;
                    case 'high':
                        params.damping = 1.0;
                        params.frequency = 2.0;
                        params.mode = 'underdamped';
                        break;
                    case 'critical':
                        params.frequency = 2.0;
                        params.damping = 2.0;
                        params.mode = 'critical';
                        break;
                }
                
                // Sliderlarni yangilash
                dampingSlider.value = params.damping;
                dampingDisplay.textContent = params.damping.toFixed(2) + ' s⁻¹';
                frequencySlider.value = params.frequency;
                frequencyDisplay.textContent = params.frequency.toFixed(1) + ' rad/s';
                
                // Rejim tugmasini yangilash
                document.querySelectorAll('.mode-btn').forEach(b => {
                    b.classList.toggle('active', b.dataset.mode === params.mode);
                });
                
                history = [];
                updateFormula();
            });
        });

        // Vizual sozlamalar
        document.getElementById('showEnvelope').addEventListener('change', (e) => {
            showEnvelope = e.target.checked;
        });

        document.getElementById('showGrid').addEventListener('change', (e) => {
            showGrid = e.target.checked;
        });

        document.getElementById('showTrail').addEventListener('change', (e) => {
            showTrail = e.target.checked;
        });

        // Formula yangilash
        function updateFormula() {
            const formulaDiv = document.getElementById('formulaDisplay');
            
            if (params.mode === 'underdamped') {
                formulaDiv.innerHTML = `$$x(t) = ${params.amplitude.toFixed(1)}e^{-${params.damping.toFixed(2)}t}\\cos(${params.frequency.toFixed(1)}t + ${params.phase.toFixed(1)})$$`;
            } else if (params.mode === 'critical') {
                formulaDiv.innerHTML = `$$x(t) = ${params.amplitude.toFixed(1)}(1 + ${params.damping.toFixed(2)}t)e^{-${params.damping.toFixed(2)}t}$$`;
            } else {
                formulaDiv.innerHTML = `$$x(t) = ${params.amplitude.toFixed(1)}e^{-${params.damping.toFixed(2)}t}\\text{ (overdamped)}$$`;
            }
            
            if (window.MathJax) {
                MathJax.typesetPromise();
            }
        }

        // Boshlang'ich formula
        updateFormula();

        // Touch hodisalari (mobil uchun)
        let touchStartX = 0;
        let touchStartY = 0;

        canvas.addEventListener('touchstart', (e) => {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
        });

        canvas.addEventListener('touchmove', (e) => {
            e.preventDefault();
            const touchX = e.touches[0].clientX;
            const touchY = e.touches[0].clientY;
            
            const deltaX = touchX - touchStartX;
            const deltaY = touchY - touchStartY;
            
            if (Math.abs(deltaX) > Math.abs(deltaY)) {
                // Gorizontal harakat - tezlikni o'zgartirish
                speed = Math.max(0.1, Math.min(5, speed + deltaX * 0.01));
                speedSlider.value = speed;
                speedValue.textContent = speed.toFixed(1) + 'x';
            }
            
            touchStartX = touchX;
            touchStartY = touchY;
        });

        // Klaviatura boshqaruvi
        document.addEventListener('keydown', (e) => {
            switch(e.key) {
                case ' ':
                    e.preventDefault();
                    playPauseBtn.click();
                    break;
                case 'r':
                    resetBtn.click();
                    break;
                case 'ArrowRight':
                    stepBtn.click();
                    break;
                case 'ArrowUp':
                    speed = Math.min(5, speed + 0.1);
                    speedSlider.value = speed;
                    speedValue.textContent = speed.toFixed(1) + 'x';
                    break;
                case 'ArrowDown':
                    speed = Math.max(0.1, speed - 0.1);
                    speedSlider.value = speed;
                    speedValue.textContent = speed.toFixed(1) + 'x';
                    break;
            }
        });
    </script>
</body>
</html>
