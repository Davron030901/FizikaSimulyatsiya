    <script>
        // Canvas elementlari
        const waveCanvas = document.getElementById('waveCanvas');
        const spaceCanvas = document.getElementById('spaceCanvas');
        const lissajousCanvas = document.getElementById('lissajousCanvas');
        
        const waveCtx = waveCanvas.getContext('2d');
        const spaceCtx = spaceCanvas.getContext('2d');
        const lissajousCtx = lissajousCanvas.getContext('2d');
        
        // Parametrlar
        let params = {
            A: 1,
            k: 1,
            omega: 2,
            phi: 0,
            speed: 1,
            freqX: 1,
            freqY: 2,
            phaseDelta: Math.PI / 2
        };
        
        let time = 0;
        let isPlaying = true;
        let animationId = null;
        
        // Canvas o'lchamlarini sozlash
        function resizeCanvases() {
            const containers = document.querySelectorAll('.canvas-container');
            containers.forEach(container => {
                const canvas = container.querySelector('canvas');
                if (canvas) {
                    const rect = container.getBoundingClientRect();
                    const width = Math.min(rect.width - 40, canvas.id === 'lissajousCanvas' ? 600 : 600);
                    const height = canvas.id === 'lissajousCanvas' ? 400 : 300;
                    
                    canvas.width = width;
                    canvas.height = height;
                }
            });
        }
        
        // Control bilan ishlash
        function setupControls() {
            const controls = [
                { id: 'amplitude', param: 'A', display: 'amplitudeValue', decimals: 2 },
                { id: 'waveNumber', param: 'k', display: 'waveNumberValue', decimals: 2 },
                { id: 'omega', param: 'omega', display: 'omegaValue', decimals: 2 },
                { id: 'phase', param: 'phi', display: 'phaseValue', decimals: 2 },
                { id: 'speed', param: 'speed', display: 'speedValue', decimals: 1, suffix: 'x' },
                { id: 'freqX', param: 'freqX', display: 'freqXValue', decimals: 2 },
                { id: 'freqY', param: 'freqY', display: 'freqYValue', decimals: 2 },
                { id: 'phaseDelta', param: 'phaseDelta', display: 'phaseDeltaValue', decimals: 2 }
            ];
            
            controls.forEach(ctrl => {
                const element = document.getElementById(ctrl.id);
                const display = document.getElementById(ctrl.display);
                
                element.addEventListener('input', (e) => {
                    const value = parseFloat(e.target.value);
                    params[ctrl.param] = value;
                    display.textContent = value.toFixed(ctrl.decimals) + (ctrl.suffix || '');
                    updateCalculations();
                    
                    // Haptic feedback for mobile
                    if (navigator.vibrate) {
                        navigator.vibrate(10);
                    }
                });
            });
        }
        
        // Play/Pause button
        document.getElementById('playPauseBtn').addEventListener('click', function() {
            isPlaying = !isPlaying;
            this.textContent = isPlaying ? 'Pause' : 'Play';
            if (isPlaying) {
                animate();
            }
        });
        
        // Reset button
        document.getElementById('resetBtn').addEventListener('click', () => {
            time = 0;
            lissajousCtx.clearRect(0, 0, lissajousCanvas.width, lissajousCanvas.height);
        });
        
        // Lissajous preset
        window.setLissajous = function(fx, fy, delta) {
            params.freqX = fx;
            params.freqY = fy;
            params.phaseDelta = delta;
            
            document.getElementById('freqX').value = fx;
            document.getElementById('freqY').value = fy;
            document.getElementById('phaseDelta').value = delta;
            
            document.getElementById('freqXValue').textContent = fx.toFixed(2);
            document.getElementById('freqYValue').textContent = fy.toFixed(2);
            document.getElementById('phaseDeltaValue').textContent = delta.toFixed(2);
            
            lissajousCtx.clearRect(0, 0, lissajousCanvas.width, lissajousCanvas.height);
            time = 0;
        };
        
        // Hisoblashlarni yangilash
        function updateCalculations() {
            const wavelength = (2 * Math.PI) / params.k;
            const frequency = params.omega / (2 * Math.PI);
            const phaseVelocity = params.omega / params.k;
            const period = (2 * Math.PI) / params.omega;
            
            document.getElementById('wavelength').textContent = wavelength.toFixed(2);
            document.getElementById('frequency').textContent = frequency.toFixed(2) + ' Hz';
            document.getElementById('phaseVelocity').textContent = phaseVelocity.toFixed(2);
            document.getElementById('period').textContent = period.toFixed(2) + ' s';
            
            document.getElementById('formulaA').textContent = params.A.toFixed(2);
            document.getElementById('formulaK').textContent = params.k.toFixed(2);
            document.getElementById('formulaOmega').textContent = params.omega.toFixed(2);
            document.getElementById('formulaPhi').textContent = params.phi.toFixed(2);
        }
        
        // To'lqin chizish (vaqt bo'yicha)
        function drawWave() {
            const canvas = waveCanvas;
            const ctx = waveCtx;
            const width = canvas.width;
            const height = canvas.height;
            
            ctx.clearRect(0, 0, width, height);
            
            // Grid
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.lineWidth = 1;
            for (let i = 0; i < width; i += 50) {
                ctx.beginPath();
                ctx.moveTo(i, 0);
                ctx.lineTo(i, height);
                ctx.stroke();
            }
            for (let i = 0; i < height; i += 50) {
                ctx.beginPath();
                ctx.moveTo(0, i);
                ctx.lineTo(width, i);
                ctx.stroke();
            }
            
            // O'q
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(0, height / 2);
            ctx.lineTo(width, height / 2);
            ctx.stroke();
            
            // To'lqin
            const scale = height / 4 / Math.max(params.A, 3);
            ctx.strokeStyle = '#00d9ff';
            ctx.lineWidth = 3;
            ctx.shadowBlur = 10;
            ctx.shadowColor = '#00d9ff';
            
            ctx.beginPath();
            for (let x = 0; x < width; x++) {
                const realX = (x / width) * 4 * Math.PI;
                const y = params.A * Math.sin(params.k * realX - params.omega * time + params.phi);
                const canvasY = height / 2 - y * scale;
                
                if (x === 0) {
                    ctx.moveTo(x, canvasY);
                } else {
                    ctx.lineTo(x, canvasY);
                }
            }
            ctx.stroke();
            ctx.shadowBlur = 0;
            
            // Nuqta
            const pointX = (time % (2 * Math.PI / params.omega)) / (2 * Math.PI / params.omega) * width;
            const pointY = params.A * Math.sin(params.k * (pointX / width * 4 * Math.PI) - params.omega * time + params.phi);
            const canvasPointY = height / 2 - pointY * scale;
            
            ctx.fillStyle = '#ff006e';
            ctx.shadowBlur = 15;
            ctx.shadowColor = '#ff006e';
            ctx.beginPath();
            ctx.arc(pointX, canvasPointY, 6, 0, 2 * Math.PI);
            ctx.fill();
            ctx.shadowBlur = 0;
        }
        
        // To'lqin fazosi (x-y)
        function drawSpace() {
            const canvas = spaceCanvas;
            const ctx = spaceCtx;
            const width = canvas.width;
            const height = canvas.height;
            
            ctx.clearRect(0, 0, width, height);
            
            // Grid
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.lineWidth = 1;
            for (let i = 0; i < width; i += 50) {
                ctx.beginPath();
                ctx.moveTo(i, 0);
                ctx.lineTo(i, height);
                ctx.stroke();
            }
            for (let i = 0; i < height; i += 50) {
                ctx.beginPath();
                ctx.moveTo(0, i);
                ctx.lineTo(width, i);
                ctx.stroke();
            }
            
            // O'q
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(0, height / 2);
            ctx.lineTo(width, height / 2);
            ctx.stroke();
            
            // Snapshot
            const scale = height / 4 / Math.max(params.A, 3);
            
            // To'lqin
            ctx.strokeStyle = '#ffbe0b';
            ctx.lineWidth = 3;
            ctx.shadowBlur = 10;
            ctx.shadowColor = '#ffbe0b';
            
            ctx.beginPath();
            for (let x = 0; x < width; x++) {
                const realX = (x / width) * 4 * Math.PI;
                const y = params.A * Math.sin(params.k * realX - params.omega * time + params.phi);
                const canvasY = height / 2 - y * scale;
                
                if (x === 0) {
                    ctx.moveTo(x, canvasY);
                } else {
                    ctx.lineTo(x, canvasY);
                }
            }
            ctx.stroke();
            ctx.shadowBlur = 0;
        }
        
        // Lissajous figuralari
        let lissajousTrail = [];
        const maxTrailLength = 500;
        
        function drawLissajous() {
            const canvas = lissajousCanvas;
            const ctx = lissajousCtx;
            const width = canvas.width;
            const height = canvas.height;
            
            // Faqat har 3-frame–¥–∞ tozalash (trail effekti)
            if (Math.floor(time * 60) % 3 === 0) {
                ctx.fillStyle = 'rgba(10, 14, 39, 0.05)';
                ctx.fillRect(0, 0, width, height);
            }
            
            // Grid
            if (lissajousTrail.length === 0) {
                ctx.clearRect(0, 0, width, height);
                ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
                ctx.lineWidth = 1;
                for (let i = 0; i < width; i += 50) {
                    ctx.beginPath();
                    ctx.moveTo(i, 0);
                    ctx.lineTo(i, height);
                    ctx.stroke();
                }
                for (let i = 0; i < height; i += 50) {
                    ctx.beginPath();
                    ctx.moveTo(0, i);
                    ctx.lineTo(width, i);
                    ctx.stroke();
                }
                
                // O'qlar
                ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(0, height / 2);
                ctx.lineTo(width, height / 2);
                ctx.stroke();
                ctx.beginPath();
                ctx.moveTo(width / 2, 0);
                ctx.lineTo(width / 2, height);
                ctx.stroke();
            }
            
            // Lissajous hisoblash
            const scale = Math.min(width, height) / 2.5;
            const x = scale * Math.sin(params.freqX * time + params.phi);
            const y = scale * Math.sin(params.freqY * time + params.phaseDelta);
            
            lissajousTrail.push({ x, y });
            if (lissajousTrail.length > maxTrailLength) {
                lissajousTrail.shift();
            }
            
            // Trail chizish
            for (let i = 1; i < lissajousTrail.length; i++) {
                const point = lissajousTrail[i];
                const prevPoint = lissajousTrail[i - 1];
                const alpha = i / lissajousTrail.length;
                
                const hue = (i / lissajousTrail.length) * 360;
                ctx.strokeStyle = `hsla(${hue}, 80%, 60%, ${alpha * 0.8})`;
                ctx.lineWidth = 2;
                
                ctx.beginPath();
                ctx.moveTo(width / 2 + prevPoint.x, height / 2 + prevPoint.y);
                ctx.lineTo(width / 2 + point.x, height / 2 + point.y);
                ctx.stroke();
            }
            
            // Joriy nuqta
            ctx.fillStyle = '#ff006e';
            ctx.shadowBlur = 15;
            ctx.shadowColor = '#ff006e';
            ctx.beginPath();
            ctx.arc(width / 2 + x, height / 2 + y, 5, 0, 2 * Math.PI);
            ctx.fill();
            ctx.shadowBlur = 0;
        }
        
        // Animatsiya
        function animate() {
            if (!isPlaying) return;
            
            time += 0.016 * params.speed;
            
            drawWave();
            drawSpace();
            drawLissajous();
            
            animationId = requestAnimationFrame(animate);
        }
        
        // Initialization
        window.addEventListener('load', () => {
            resizeCanvases();
            setupControls();
            updateCalculations();
            animate();
        });
        
        window.addEventListener('resize', () => {
            resizeCanvases();
        });
        
        // Touch support
        let touchStartX = 0;
        let touchStartY = 0;
        
        document.addEventListener('touchstart', (e) => {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
        });
        
        document.addEventListener('touchmove', (e) => {
            if (e.target.tagName === 'INPUT') return;
            e.preventDefault();
        }, { passive: false });
    </script>
</body>
</html>
